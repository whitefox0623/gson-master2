<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp"
        android:id="@+id/textView" />

    <EditText
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Your Name"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="160dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="160dp"
        android:id="@+id/textView2" />

    <EditText
        android:id="@+id/email"
        android:inputType="textEmailAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Your Email"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="160dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="160dp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/send_request"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Send Request"
        android:layout_marginTop="192dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="208dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="208dp" />

    <!--<TextView-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Response From Server"-->
        <!--android:textSize="16sp"-->
        <!--android:textStyle="bold"-->
        <!--android:layout_marginTop="424dp"-->
        <!--app:layout_constraintTop_toBottomOf="@+id/login_et_pwd"-->
        <!--android:layout_marginStart="152dp"-->
        <!--app:layout_constraintLeft_toLeftOf="parent"-->
        <!--android:layout_marginLeft="152dp" />-->

    <TextView
        android:id="@+id/response"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="43dp"
        tools:layout_editor_absoluteX="43dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible"
        tools:layout_editor_absoluteY="43dp"
        tools:layout_editor_absoluteX="43dp" />

    <Button
        android:id="@+id/buttontopg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="確定"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintVertical_bias="0.75" />

    <Spinner
        android:id="@+id/notify_spinner"
        android:layout_width="78dp"
        android:layout_height="22dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/buttontopg2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.9" />

    <Spinner
        android:id="@+id/notify_spinner2"
        android:layout_width="88dp"
        android:layout_height="26dp"
        app:layout_constraintLeft_toRightOf="@+id/notify_spinner"
        android:layout_marginLeft="56dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/buttontopg2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="56dp"
        app:layout_constraintVertical_bias="0.91" />


</android.support.constraint.ConstraintLayout>
